<div class="container">

    <p><%= notice %></p>
    
   <div class="contents"> 
   <% @blogs.each do |blog| %>
    <ul class = 'row'>
        <li class = "col-sm-6 col-md-6">タイトル:<%= blog.title %></li>
        <li class = "col-sm-6 col-md-6">内容:<%= blog.content %></li>
    </ul>
  
        <%= link_to 'ブログを確認する', blog_path(blog.id), class: 'btn btn-info' %>
        <% unless current_user.nil? %>
          <% if current_user.id == blog.user_id %>
        <%= link_to 'ブログを編集する', edit_blog_path(blog.id), class: 'btn btn-info' %>
        <%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除してよろしいですか'}, class: 'btn btn-info' %>
          <% end %>
        <% end %>
<% end %>
</div>

</div>