<h3>以下の内容で、送信する。</h3>
<div class="container">
   <div class="blog-details">

<%= form_with(model: @blog, url: blogs_path, local: true) do |form| %>

  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
 <div class="blog_title">
  <p>タイトル:<%= @blog.title %></p>
  <p>本文:<%= @blog.content %></p>
  <p>画像: <%= image_tag(@blog.image) %></p>
    <%= form.hidden_field :image_cache %>
  <button type="submit" class="btn btn-default">登録する</button>
<% end %>

<%= form_with(model: @blog, url: new_blog_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <button type="submit" class="btn btn-default">戻る</button>
<% end %>
   </div>
   </div>
</div>